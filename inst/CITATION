citHeader("To cite package 'leiv' in publications use:")

desc <- packageDescription("leiv")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual",
         title = "leiv: Bivariate Linear Errors-In-Variables Estimation",
         author = personList(as.person("David Leonard")),
         year = year,
         note = vers,

         textVersion =
         paste("David Leonard (",
               year,
               "). leiv: Bivariate Linear Errors-In-Variables Estimation. ",
               vers, ".", sep=""))

